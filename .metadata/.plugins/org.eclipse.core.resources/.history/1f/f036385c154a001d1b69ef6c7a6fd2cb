package br.com.merge.model;

import java.util.Date;

import javax.xml.bind.annotation.XmlRootElement;

/**
 *Classe que repesenta um Curso do curriculo
 *@author Henrique Cesar
 *@author Dennys Nascimenro 
 *@author Luan Reis
 *@author Gustavo Fonseca
 *@author Rodrigo Machado
 *
 */
@XmlRootElement
public class Curso {
	
	/**
	 *Armazena nome da instituição, nome do cur, descricao do cur 
	 */
	private String nmInstituicao, nmCur, dsCur, tpCur;
	
	/**
	 * Armazena o número de certificado e a quantidade de horas do cur
	 */
	private Integer nrCertificado, nrCH;
	
	/**
	 * Armazena a data de inicio do cur e a data terminio do cur
	 */
	private Date dtInicio, dtTermino;
	
	
	/**
	 * Método padrão
	 */
	public Curso() {
	}

	/**
	 * Construtor que recebe o nome da institiuição, nome do cur, descrição do cur,tipo do cur, número do certificado,
	 * número da carga horária  data de inicio e datta de terminio
	 * @param nome da Instituicao do cur
	 * @param nome do Cur
	 * @param descricao do Cur
	 * @param tipo cur
	 * @param numero do  do cur
	 * @param numero CH do cur
	 * @param data Inicio do cur
	 * @param data Termino do cur
	 */
	public Curso(String nmInstituicao, String nmCur, String dsCur, String tpCur, Integer nrCertificado,
			Integer nrCH, Date dtInicio, Date dtTermino) {
		this.nmInstituicao = nmInstituicao;
		this.nmCur = nmCur;
		this.dsCur = dsCur;
		this.tpCur = tpCur;
		this.nrCertificado = nrCertificado;
		this.nrCH = nrCH;
		this.dtInicio = dtInicio;
		this.dtTermino = dtTermino;
	}
	
	/**
	 * Retorna o nome da instituição
	 * @return nome da instituição
	 */
	public String getNmInstituicao() {
		return nmInstituicao;
	}

	/**
	 * Altera o nome da Instituição
	 * @param nome da Instituicao
	 */
	public void setNmInstituicao(String nmInstituicao) {
		this.nmInstituicao = nmInstituicao;
	}

	/**
	 * Retorna o nome do cur
	 * @return nome do cur
	 */
	public String getNmCur() {
		return nmCur;
	}

	/**
	 * Altera o nome do cur
	 * @param nome do Cur
	 */
	public void setNmCur(String nmCur) {
		this.nmCur = nmCur;
	}

	/**
	 * Retorna a descricao do cur
	 * @return descricao do cur
	 */
	public String getDsCur() {
		return dsCur;
	}

	/**
	 * Altera a descrição do cur
	 * @param descricao do Cur
	 */
	public void setDsCur(String dsCur) {
		this.dsCur = dsCur;
	}

	/**
	 * Retorna o numero certificado
	 * @return numero do certificado
	 */
	public Integer getNrCertificado() {
		return nrCertificado;
	}

	/**
	 * Altera o numero do certificado 
	 * @param numert do Certificado
	 */
	public void setNrCertificado(Integer nrCertificado) {
		this.nrCertificado = nrCertificado;
	}

	/**
	 * Retorna a carga horária
	 * @return carga horária
	 */
	public Integer getNrCH() {
		return nrCH;
	}

	/**
	 * Altera a carga horária 
	 * @param numero Carga Horaria
	 */
	public void setNrCH(Integer nrCH) {
		this.nrCH = nrCH;
	}

	/**
	 * Retorna a data de inicio
	 * @return data de inicio
	 */
	public Date getDtInicio() {
		return dtInicio;
	}

	/**
	 * Altera a data de inicio
	 * @param data de inicio
	 */
	public void setDtInicio(Date dtInicio) {
		this.dtInicio = dtInicio;
	}

	/**
	 * Retorna a data de terminio
	 * @return data de terminio
	 */
	public Date getDtTermino() {
		return dtTermino;
	}

	/**
	 * Altera a data de terminio 
	 * @param data de terminio
	 */
	public void setDtTermino(Date dtTermino) {
		this.dtTermino = dtTermino;
	}

	/**
	 * Retorna o tipo do cur
	 * @return tipo do cur
	 */
	public String getTpCur() {
		return tpCur;
	}

	/**
	 * Altera o tipo do cur
	 * @param tipo do cur
	 */
	public void setTpCur(String tpCur) {
		this.tpCur = tpCur;
	}
	
	
}